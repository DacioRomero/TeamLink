<!-- views/partials/player.hbs -->
<div class="card h-100">
    <a href="/players/{{player._id}}">
        <div class="card-img-top player-icon" style="background-image: url({{player.iconURL}})"></div>
    </a>
    <div class="card-body">
        <h5 class="card-title">{{player.battletag}}</h5>
        <h6 class="card-subtitle text-muted">{{player.role}} - {{player.rank}}</h6>
        <p class="card-text">{{player.description}}</p>
    </div>
</div>
