<!-- views/partials/player-card.hbs -->
<div class="card h-100">
    <a href="/players/{{player._id}}">
        <div class="card-img-top player-icon" style="background-image: url({{#if player.iconURL}}{{player.iconURL}}{{else}}https://d1u1mce87gyfbn.cloudfront.net/hero/mccree/icon-portrait.png{{/if}})"></div>
    </a>
    <div class="card-body">
        <h5 class="card-title">{{player.battletag}}</h5>
        <h6 class="card-subtitle text-muted">{{player.role}} - {{player.rank}}</h6>
        <p class="card-text">{{player.description}}</p>
    </div>
</div>
