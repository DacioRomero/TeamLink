<!-- views/partials/player-fieldset.hbs -->
<fieldset>
    <div class="form-group">
        <label for="team-name">Name *</label>
        <input class="form-control" id="team-name" type="text" name="name" value="{{team.name}}" required>
    </div>
    <div class="form-group">
        <label for="team-description">Description</label><br>
        <textarea class="form-control" id="team-description" name="description" rows="3" style="resize: none">{{team.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="team-iconURL">Icon URL</label><br>
        <input class="form-control" id="team-iconURL" type="text" name="iconURL" value="{{team.iconURL}}">
    </div>
</fieldset>
