<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/players/{{playerId}}/comments" method="POST">
                <legend>New Comment</legend>
                {{> comment-fieldset }}
                <div class="form-group text-right">
                    <button class="btn btn-primary" type="submit">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>
