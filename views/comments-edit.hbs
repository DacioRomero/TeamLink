<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/players/{{comment.playerId}}/comments/{{comment._id}}?_method=PUT" method="POST">
                <legend>Edit Comment</legend>
                {{> comment-fieldset }}
                <div class="form-group text-right">
                    <button class="btn btn-primary" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
