<!-- views/players-show.hbs -->
<div class="row">
    <div class="col-6">
        <a href="/players/{{player._id}}/edit" class="btn btn-primary">Edit</a>
    </div>
    <div class="col-6 text-right">
        <form action="/players/{{player._id}}?_method=DELETE" method="POST">
            <button class="btn btn-warning" type="submit">Delete</button>
        </form>
    </div>
    <div class="col-12">
        {{> player-card }}
    </div>
    {{#each comments}}
    
    {{/each}}
</div>
