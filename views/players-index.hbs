<!-- views/players-index.hbs -->
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Players</h2>
        </div>
        <div class="col-6 text-right my-auto">
            <a href="/players/new" class="btn btn-primary">Post</a>
        </div>
        {{#each players}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
            {{> player-card player=this }}
        </div>
        {{/each}}
    </div>    
</div>
