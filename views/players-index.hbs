<!-- views/players-index.hbs -->
<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
            <form method="GET">
                <div class="form-group">
                    <label for="rtge">Min Rank</label>
                    <output id="rtgeVal">{{query.rgte}}</output>
                    <input oninput="rtgeVal.value=value" type="range" min="0" max="5000" id="rgte" name="rgte" value="{{query.rgte}}">
                </div>
                <div class="form-group">
                    <label for="rtle">Max Rank</label>
                    <output id="rtleVal">{{query.rlte}}</output>
                    <input oninput="rtleVal.value=value" type="range" min="0" max="5000" id="rlte" name="rlte" value="{{query.rlte}}">
                </div>
                <div class="form-group text-right">
                    <button class="btn btn-primary" type="submit">Filter</button>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-9">
            <div class="row">
                <div class="col-6">
                    <h2>Players</h2>
                </div>
                <div class="col-6 text-right my-auto">
                    <a href="/players/new" class="btn btn-primary">New</a>
                </div>
                {{#each players}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
                    {{> player-card player=this }}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
